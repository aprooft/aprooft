<div class="products-view-wrapper">
  <div class="product-searchbar-wrapper">
    <div class="product-searchbar">
      <div class="product-searchbar-field">
        <%= form_tag widgets_path, method: :get do %>
        <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Type your product here..."%>
      </div>
      <div class="product-searchbar-button">
        <%= button_tag(:class => "search-button") do %>
          <i class="fas fa-search fa-2x"></i>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="your-products-wrapper">
    <h1> Your products</h1>
    <div class="widgets-all-list">
      <% @widgets.where(user_id: current_user.id).each do |product| %>
        <%= link_to edit_widget_path(product[:id]) do %>
          <div class="product-card fade-in">
            <% if product.product_pic.present?%>
              <%= cl_image_tag product.product_pic.key  %>
            <% else %>
              <img src="https://images.unsplash.com/photo-1546435770-a3e426bf472b?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=2846&q=80" alt="">
            <% end %>
            <div class="product-card-info">
              <h2> <%= product.product_title %> </h2>
            </div>
          </div>
        <% end %>
      <% end %>
   </div>
    <%= link_to new_widget_url do %>
      <i class="fas fa-plus-circle fa-10x fixed"></i>
    <% end %>
  </div>
</div>

