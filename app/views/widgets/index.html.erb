<div class="searchbar-container">
  <div class="flex" style=" width: 50%">
      <div style=" width: 100%">
        <%= form_tag widgets_path, method: :get do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Type your product here..."%>
      </div>
      <div>
        <%= button_tag(:class => "search-button") do %>
        <i class="fas fa-search fa-2x"></i>
        <% end %>
        <% end %>
     </div>
   </div>
</div>

<div class="container">
  <h1> Your products</h1>
  <div class="widgets-all-list">
    <% @widgets.where(user_id: current_user.id).each do |product| %>
    <div class="card-pick fade-in">
     <img src="https://images.unsplash.com/photo-1546435770-a3e426bf472b?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=2846&q=80" alt="">
     <div class="card-pick-info">
      <h2> <%= product.product_title %> </h2>
     </div>
    </div>
    <% end %>
    <div class="card-pick fade-in">
     <img src="https://i.ibb.co/W2507vM/kisspng-plus-and-minus-signs-computer-icons-clip-art-plus-sign-5aaad857361cb2-9687832115211459432217.png" alt="" style="object-fit: contain; margin-top: 23px;">
     <div class="card-pick-info">
      <h2> Add a product</h2>
     </div>
    </div>
  </div>

</div>
